@model List<About>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <h4>Hakkımızda Ekle</h4>
        <hr />
        <form method="post">
            @foreach (var item in Model.Take(1))
            {
                <div class="form-group">
                    <label asp-for="@item.Title" class="control-label">Başlık</label>
                    <input asp-for="@item.Title" class="form-control" value="@item.Title" />
                </div>
                <div class="form-group">
                    <label asp-for="@item.Description" class="control-label">Açıklama</label>
                    <input asp-for="@item.Description" class="form-control" value="@item.Description" />
                </div>
                <div class="form-group">
                    <label asp-for="@item.Service1" class="control-label">Servis-1</label>
                    <input asp-for="@item.Service1" class="form-control" value="@item.Service1" />
                </div>
                <div class="form-group">
                    <label asp-for="@item.Service2" class="control-label">Servis-2</label>
                    <input asp-for="@item.Service2" class="form-control" value="@item.Service2" />
                </div>
                <div class="form-group">
                    <label asp-for="@item.Service3" class="control-label">Servis-3</label>
                    <input asp-for="@item.Service3" class="form-control" value="@item.Service3" />
                </div>
                <div class="form-group">
                    <label asp-for="@item.ImageUrl1" class="control-label">Servis Resim-1</label>
                    <input asp-for="@item.ImageUrl1" class="form-control" value="@item.ImageUrl1" />
                </div>
                <div class="form-group">
                    <label asp-for="@item.ImageUrl2" class="control-label">Servis Resim-2</label>
                    <input asp-for="@item.ImageUrl2" class="form-control" value="@item.ImageUrl2" />
                </div>
                <div class="form-group">
                    <label asp-for="@item.ImageUrl3" class="control-label">Servis Resim-3</label>
                    <input asp-for="@item.ImageUrl3" class="form-control" value="@item.ImageUrl3" />
                </div>
                <div class="form-group">
                    <input style="margin-top:10px;" type="submit" value="Değişikliği Kaydet" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>
